{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compose: up (dev)",
      "type": "shell",
      "command": "docker compose up --build -d",
      "problemMatcher": []
    },
    {
      "label": "vite: dev",
      "type": "shell",
      "command": "npm run dev -- --host 0.0.0.0 --port 5173",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            { "regexp": ".*" }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*",
            "endsPattern": "Local:\\s+http://localhost:5173/|ready in"
          }
        }
      ]
    }
  ]
}